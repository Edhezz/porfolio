---
interface Props {
  degree: string
  institution: string
  date: string
  img?: string
}

const { degree, institution, date, img } = Astro.props
---

<div
  class="relative mx-12 pb-12 grid before:absolute before:right-[-35px] before:block before:h-full before:border-l-2 before:border-black/20 dark:before:border-white/15 before:content-[''] md:grid-cols-5 md:gap-10 md:space-x-4"
>
  <!-- Encabezado: título, institución y fecha -->
  <div class="relative pb-12 md:col-span-2 md:order-2">
    <div class="sticky top-0">
      <span class="text-yellow-400 -right-[42px] absolute rounded-full text-5xl">
        &bull;
      </span>

      <h3 class="text-xl font-bold text-yellow-400">{degree}</h3>
      <h4 class="font-semibold text-xl text-gray-600 dark:text-white">
        {institution}
      </h4>
      <time class="p-0 m-0 text-sm text-gray-600/80 dark:text-white/80">
        {date}
      </time>
      <img src={img} class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy">
    </div>
  </div>

</div>
