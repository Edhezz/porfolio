---
import EducationItem from "./EducationItem.astro"

const EDUCATION = [
  {
    date: "2024 - Actualmente",
    degree: "Ingeniería en Desarrollo y Gestión de Software",
    institution: "Universidad Tecnológica de Izúcar de Matamoros",
    description:
      "Actualmente cursando la ingeniería, con enfoque en el desarrollo de aplicaciones web y gestión eficiente de proyectos de software. Adquirí habilidades en lenguajes de programación, diseño de bases de datos, y metodologías ágiles para el desarrollo de proyectos tecnológicos.",
  },
]
---

<section class="mt-16">
  <!-- <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Perfil Académico</h2> -->
  <ol class="relative mt-8">
    {
      EDUCATION.map((education) => (
        <li class="">
          <EducationItem {...education} />
        </li>
      ))
    }
  </ol>
</section>
